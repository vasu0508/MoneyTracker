<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/grey">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textColor="@color/black"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="80dp"
        android:textSize="12dp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-condensed-medium"
        android:id="@+id/usernameview"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/usernameview"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:background="@drawable/underline"
        android:id="@+id/usernameedit"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash in Hand"
        android:textColor="@color/black"
        android:layout_below="@id/usernameedit"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:textSize="12dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:id="@+id/moneyinhandview"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_marginTop="5dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/moneyinhandview"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:background="@drawable/underline"
        android:inputType="numberDecimal"
        android:id="@+id/moneyinhandedit"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_button"
        android:text="Submit"
        android:fontFamily="sans-serif-condensed-medium"
        android:textAllCaps="false"
        android:layout_below="@id/moneyinhandedit"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/submitbutton"/>
</RelativeLayout>